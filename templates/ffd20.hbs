<div>
    <nav class="tabs" data-group="party">
        <li class="item" data-tab="general">{{localize "party-overview.GENERAL"}}</li>
		<li class="item" data-tab="currencies">{{localize "party-overview.WEALTH"}}</li>
		<li class="item" data-tab="languages">{{localize "FFD20.Languages"}}</li>
		<li class="item" data-tab="lore">{{localize "FFD20.KnowledgeSkills"}}</li>
    </nav>
    <section class="content">
        <div class="tab" data-tab="general" data-group="party">
            <div class="table-row header">
                {{> "modules/party-overview/templates/parts/FilterButton.html"}}
                <div class="text">{{localize "party-overview.NAME"}}</div>
                <div class="num" title="{{localize "FFD20.Health"}}"><i class="fas fa-heart"></i></div>
                <div class="num" title="{{localize "FFD20.ManaPoints"}}"><i class="fas fa-hat-wizard"></i></div>
                <div class="num" title="{{localize "FFD20.LimitBreak"}}"><i class="fas fa-exclamation"></i></div>
                <div class="num" title="{{localize "FFD20.ArmorClass"}}"><i class="fas fa-shield-alt"></i></div>
                <div class="num" title="{{localize "FFD20.SkillPer"}}"><i class="far fa-eye"></i></div>
                <div class="num" title="{{localize "FFD20.SavingThrowFort"}}"><i class="fas fa-hard-hat"></i></div>
                <div class="num" title="{{localize "FFD20.SavingThrowRef"}}"><i class="fas fa-running"></i></div>
                <div class="num" title="{{localize "FFD20.SavingThrowWill"}}"><i class="fas fa-brain"></i></div>
            </div>

            {{#each actors as | actor | }}
            <div class="table-row">
                <div class="button">
                    <button class="btn-toggle-visibility" data-actor="{{actor.id }}">
                        {{#if actor.isHidden }}<i class="value fas fa-eye-slash"></i>{{else}}<i
                            class="value fas fa-eye"></i>{{/if}}
                    </button>
                </div>
                <div class="text">{{ actor.shortestName }}</div>
                <div class="num">{{ actor.hp.value }}/{{ actor.hp.max }}</div>
                <div class="num">{{ actor.mp.value }}/{{ actor.mp.max }}</div>
                <div class="num">{{ actor.limitbreak.value }}/{{ actor.limitbreak.max }}</div>
                <div class="num">{{ actor.armor }} {{#if actor.shieldAC}}{{ actor.shieldAC }}{{/if}}</div>
                <div class="num">{{ actor.perception }}</div>
                <div class="num">{{ actor.saves.fortitude }}</div>
                <div class="num">{{ actor.saves.reflex }}</div>
                <div class="num">{{ actor.saves.will }}</div>
            </div>
            {{/each}}
        </div>
		<!-- Languages -->
        {{> "modules/party-overview/templates/parts/Languages.html"}}

        <!-- Knowledge -->
        {{> "modules/party-overview/templates/parts/FFD20-Knowledge.html"}}

        <!-- Currency -->
        <div class="tab" data-tab="currencies" data-group="party">
            <div class="table-row header">
                {{> "modules/party-overview/templates/parts/FilterButton.html"}}
                <div class="text">Name</div>
                <div class="text">{{localize "FFD20.CurrencyPGil"}}</div>
                <div class="text">{{localize "FFD20.CurrencyGil"}}</div>
                <div class="text">{{localize "FFD20.CurrencySGil"}}</div>
                <div class="text">{{localize "FFD20.CurrencyCGil"}}</div>
                <div class="text">{{localize "FFD20.CurrencyGil"}} ({{localize "party-overview.TOTAL"}})</div>
            </div>

            {{#each actors as | actor | }}
            <div class="table-row">
                <div class="button">
                    <button class="btn-toggle-visibility" data-actor="{{actor.id }}">
                        {{#if actor.isHidden }}<i class="value fas fa-eye-slash"></i>{{else}}<i
                            class="value fas fa-eye"></i>{{/if}}
                    </button>
                </div>
                <div class="text">{{ actor.shortestName }}</div>
                <div class="text">{{currency.pgil}}</div>
                <div class="text">{{currency.gil}}</div>
                <div class="text">{{currency.sgil}}</div>
                <div class="text">{{currency.cgil}}</div>
                <div class="text"><b>{{actor.totalGil}}</b></div>
            </div>
            {{/each}}
            <div class="table-row">
                <div class="button">

                </div>
                <div class="text">{{localize "party-overview.TOTAL"}}</div>
                <div class="text">{{totalCurrency.pgil}}</div>
                <div class="text">{{totalCurrency.gil}}</div>
                <div class="text">{{totalCurrency.sgil}}</div>
                <div class="text">{{totalCurrency.cgil}}</div>
                <div class="text"><b>{{totalPartyGil}}</b></div>
            </div>
        </div>

        <!-- Bulk -->
        {{!-- {{> "modules/party-overview/templates/parts/PF2e-Bulk.html"}} --}}
    </section>
</div>